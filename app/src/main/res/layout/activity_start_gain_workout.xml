<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".StartGainWorkoutActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/startworkout_exercise"
        android:visibility="visible"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_700"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/start_exercise_name"
                android:text="Jumping Jacks"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:layout_marginVertical="5dp"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/start_exercise_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" \t Do Jumping Jacks 50 sec."
            android:textSize="20sp"
            android:layout_margin="15dp"
            android:textColor="@color/black_700"
            />

        <LinearLayout
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="@color/black_500"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIMER"
                android:textSize="22sp"
                android:textColor="#C8C4C4"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/start_exercise_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:textSize="45sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/start_exercise_gif"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/jumping_jacks"
            android:layout_margin="10dp"
            />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            >

            <Button
                android:id="@+id/btn_quit_ecercise"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="QUIT"
                android:textColor="@color/white"
                android:backgroundTint="@color/black_700"
                android:textSize="18sp"
                android:padding="15dp"
                />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn_skip_ecercise"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="SKIP"
                android:textColor="@color/white"
                android:backgroundTint="@color/black_700"
                android:textSize="18sp"
                android:padding="15dp"
                />


        </LinearLayout>







    </LinearLayout>








    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/startworkout_rest"
        android:visibility="gone"
        android:background="@color/black_700"
        android:gravity="center"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REST TIME"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:fontFamily="sans-serif-black"
            android:layout_margin="15dp"
            />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/shapeup_logo"
            android:layout_margin="10dp"
            android:scaleX="2.5"
            android:scaleY="2.5"
            />

        <TextView
            android:id="@+id/start_rest_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="45sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:gravity="center"
            >

            <Button
                android:id="@+id/btn_quit_exercise"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="QUIT"
                android:textColor="@color/white"
                android:backgroundTint="@color/teal_700"
                android:textSize="18sp"
                android:padding="15dp"
                />

            <Space
                android:layout_width="20dp"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn_skip_rest"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="SKIP"
                android:textColor="@color/white"
                android:backgroundTint="@color/teal_700"
                android:textSize="18sp"
                android:padding="15dp"
                />


        </LinearLayout>



    </LinearLayout>


</LinearLayout>